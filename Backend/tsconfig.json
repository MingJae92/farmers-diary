{
  "compilerOptions": {
    "target": "ESNext",                                  /* Use the latest JavaScript version */
    "module": "ESNext",                                  /* Output code as ES modules */
    "moduleResolution": "node",                           /* Ensure compatibility with Node.js module resolution */
    "esModuleInterop": true,                              /* Ensure compatibility for CommonJS imports */
    "resolveJsonModule": true,                            /* Allow importing JSON files */
    "strict": true,                                       /* Enable strict type-checking options */
    "skipLibCheck": true,                                 /* Skip type checking for .d.ts files */
    "forceConsistentCasingInFileNames": true,             /* Ensure consistent casing in imports */
    "outDir": "./dist",                                   /* Specify the output folder for compiled files */
    "rootDir": "./",                                      /* Specify the root directory for the source files */
    "declaration": true,                                  /* Generate .d.ts files */
    "declarationMap": true,                               /* Generate sourcemaps for .d.ts files */
    "sourceMap": true,                                    /* Generate source maps for the JavaScript files */
    "removeComments": true,                               /* Remove comments from the generated JavaScript files */
    "noEmit": false,                                      /* Emit files even if there are type errors */
    "isolatedModules": true,                              /* Enable isolated module processing */
    "allowJs": true,                                      /* Allow JavaScript files in the project */
    "skipDefaultLibCheck": true,                          /* Skip type checking of default library files */
    "experimentalDecorators": true,                       /* Enable experimental decorators for TypeScript */
    "module": "ESNext",                                   /* Use ESNext module system */
    "target": "ESNext"                                    /* Use the latest version of JavaScript */
  },
  "include": [
    "server/**/*.ts"                                      /* Include all files in the server directory */
  ]
}
